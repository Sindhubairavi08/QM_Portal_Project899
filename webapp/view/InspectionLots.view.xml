<mvc:View controllerName="qmportal899.controller.InspectionLots"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="inspectionLotsPage" title="{i18n>inspectionLotsTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="idInspectionTable" items="{/ZQM899_INSPECT}" growing="true" growingThreshold="10">
                <columns>
                    <Column><Text text="{i18n>colInspectionLot}" /></Column>
                    <Column><Text text="{i18n>colMaterial}" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>colPlant}" /></Column>
                    <Column hAlign="End"><Text text="{i18n>colQuantity}" /></Column>
                    <Column><Text text="{i18n>colUoM}" /></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>colDates}" /></Column>
                    <Column><Text text="{i18n>colStatus}" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" press=".onItemPress">
                        <cells>
                            <Text text="{InspectionLot}" />
                            <Text text="{Material}" />
                            <Text text="{Plant}" />
                            <Text text="{InspectionLotQuantity}" />
                            <Text text="{InspectionLotQuantityUnit}" />
                            <Text text="{path: 'InspectionStartDate', type: 'sap.ui.model.type.Date'}" />
                            <ObjectStatus text="{UsageDecision}" 
                                state="{= ${UsageDecision} === 'Approved' ? 'Success' : ${UsageDecision} === 'Rejected' ? 'Error' : 'None'}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
