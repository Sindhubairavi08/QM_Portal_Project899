<mvc:View controllerName="qmportal899.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Page id="resultRecordingPage" title="{i18n>resultRecordingTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="idResultTable" items="{/ZQM899_RECORD}" growing="true" growingThreshold="10">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Select Lot to Record Results"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="{i18n>colInspectionLot}" /></Column>
                    <Column><Text text="{i18n>colMaterial}" /></Column>
                    <Column><Text text="{i18n>colQuantity}" /></Column>
                    <Column><Text text="Unrestricted" /></Column>
                    <Column><Text text="Blocked" /></Column>
                    <Column><Text text="Production" /></Column>
                    <Column><Text text="Action" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{InspectionLot}" />
                            <Text text="{Material}" />
                            <Text text="{InspectionLotQuantity} {InspectionLotQuantityUnit}" />
                            <Input value="{UnrestrictedStock}" type="Number" editable="{= ${UsageDecision} !== 'Approved' &amp;&amp; ${UsageDecision} !== 'Rejected'}" />
                            <Input value="{BlockedStock}" type="Number" editable="{= ${UsageDecision} !== 'Approved' &amp;&amp; ${UsageDecision} !== 'Rejected'}" />
                            <Input value="{ProductionStock}" type="Number" editable="{= ${UsageDecision} !== 'Approved' &amp;&amp; ${UsageDecision} !== 'Rejected'}" />
                            <Button text="{i18n>btnSave}" press=".onSave" enabled="{= ${UsageDecision} !== 'Approved' &amp;&amp; ${UsageDecision} !== 'Rejected'}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
